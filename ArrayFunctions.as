package {public class ArrayFunctions {		/*Instance properties*/		/*Instance methods*/			public function ArrayFunctions()	{	}	public function array2String(a:Array):String	{		//declare a variable str of type String and assign value - an empty string		var str:String = "";		//convert Array of Strings that is the concatenation (in order) of the elements of the Array		for (var i:int = 0; i < a.length; i++)		{			str = str + a[i];		}		return str;	}	//takes in a single parameter s of type String and returns an Array	public function string2Array(s:String):Array	{		//declare variable named arr of type Array and assign value - an empty array with the length of s		var arr:Array = new Array(s.length);		//create an Array that puts each letter of the passed parameter into its own slot		for (var j:int = 0; j < s.length; j++)		{			arr[j] = s.charAt(j);		}		return arr;	}}	}